<!-- Don't remove this FrameLayout!!! Or content will get fucked up when switching pages! -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.vanita5.twittnuker.view.ExtendedSwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="true">
    
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    
            <include layout="@layout/layout_content_fragment_common" />

            <de.vanita5.twittnuker.view.ExtendedRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:focusable="true"
                android:scrollbars="vertical"/>
        </FrameLayout>
    </de.vanita5.twittnuker.view.ExtendedSwipeRefreshLayout>
</FrameLayout>